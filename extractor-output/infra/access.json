{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {        
        "keyVaultName": {
            "type": "string",
            "defaultValue": "myakv",
            "metadata": {
                "description": "Name of the vault"
            }
        },
        "applicationId": {
            "type": "string",                        
            "defaultValue": "0000-1111-333-2222-555",
            "metadata": {
                "description": "application Id"
            }
        },
        "certPassword": {
            "type": "string",                        
            "defaultValue": "Password1$",
            "metadata": {
                "description": "Password for the private cert"
            }
        },
        "base64PvtCert": {
            "type": "string",                        
            "defaultValue": "",
            "metadata": {
                "description": "Base 64 value of the pfx cert (Looks like this isn't supported with ARM for AKV though)"
            }
        }
    },  
    "resources": [
      {
        
        "name": "[concat(parameters('keyVaultName'), '/add')]",
        "type": "Microsoft.KeyVault/vaults/accessPolicies",        
        "apiVersion": "2019-09-01",     
        "properties": {
            "accessPolicies": [{
                "tenantId": "[subscription().tenantId]",
                "ObjectId": "[parameters('applicationId')]",                
                "permissions": {
                    "secrets": ["all"],
                    "certificates": ["all"],
                    "keys": ["all"]
                }
            }]
          }
        },

        {
            "type": "Microsoft.KeyVault/vaults/keys",
            "apiVersion": "2019-09-01",
            "name": "[concat(parameters('keyVaultName'), '/key1-from-arm')]",
            "location": "eastus",            
            "properties": {
                "kty": "RSA",
                "keySize": 2048,
                "attributes": {
                    "enabled": true
                }
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2021-04-01-preview",
            "name": "[concat(parameters('keyVaultName'), '/apimext')]",
            "location": "eastus",            
            "properties": {
                "contentType": "application/x-pkcs12",
                "value": "[parameters('base64PvtCert')]",
                "pwd": "[parameters('certPassword')]",
                "attributes": {
                    "enabled": true
                }
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2021-04-01-preview",
            "name": "[concat(parameters('keyVaultName'), '/sec1-from-arm')]",
            "location": "eastus",           
            "properties": {
                "value": "mysecretvalue",
                "attributes": {
                    "enabled": true
                }
            }
        }

    ]
}